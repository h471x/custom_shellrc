# Function for pip alias
function pip() {
  if [[ "$PWD" == "/mnt/"* ]]; then
    cmd.exe /c pip "$@"
  else
    cd /mnt/d/NTSOA
    cmd.exe /c pip "$@"
    cd - &>/dev/null;
  fi
}

